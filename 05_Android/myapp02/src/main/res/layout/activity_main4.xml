<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android = "http://schemas.android.com/apk/res/android"
             xmlns:app = "http://schemas.android.com/apk/res-auto"
             xmlns:tools = "http://schemas.android.com/tools"
             android:layout_width = "match_parent"
             android:layout_height = "match_parent"
             android:shrinkColumns = "*"
             android:stretchColumns = "*"
             tools:context = ".MainActivity4">

    <TableRow android:layout_weight = "1">
        <EditText
            android:id = "@+id/txt1"
    
            android:hint = "숫자1" />
    </TableRow>
    <TableRow android:layout_weight = "1">
        <EditText
            android:id = "@+id/txt2"
            android:hint = "숫자2" />
    </TableRow>

    <TableRow android:layout_weight = "1">
        <Button
            android:id = "@+id/btn0"
            android:text = "0" />
        <Button
            android:id = "@+id/btn1"
            android:text = "1" />
        <Button
            android:id = "@+id/btn2"
            android:text = "2" />
        <Button
            android:id = "@+id/btn3"
            android:text = "3" />
        <Button
            android:id = "@+id/btn4"
            android:text = "4" />
    </TableRow>
    <TableRow android:layout_weight = "1">
        <Button
            android:id = "@+id/btn5"
            android:text = "5" />
        <Button
            android:id = "@+id/btn6"
            android:text = "6" />
        <Button
            android:id = "@+id/btn7"
            android:text = "7" />
        <Button
            android:id = "@+id/btn8"
            android:text = "8" />
        <Button
            android:id = "@+id/btn9"
            android:text = "9" />
    </TableRow>


    <TableRow android:layout_weight = "1">
        <Button
            android:id = "@+id/btnAdd"
    
            android:text = "더하기" />
    </TableRow>
    <TableRow android:layout_weight = "1">
        <Button
            android:id = "@+id/btnSub"
    
            android:text = "빼기" />
    </TableRow>
    <TableRow android:layout_weight = "1">
        <Button
            android:id = "@+id/btnMul"
    
            android:text = "곱하기" />
    </TableRow>
    <TableRow android:layout_weight = "1">
        <Button
            android:id = "@+id/btnDiv"
            android:text = "나누기" />
    </TableRow>
    <TableRow android:layout_weight = "1">
      <TextView
          android:layout_span = "2"
          android:text = "계산결과"
          android:textSize = "30dp" />

      <TextView
          android:id = "@+id/result"
          android:layout_span = "3"
          android:text = "qwe"
          android:textSize = "30dp" />
    </TableRow>


</TableLayout>